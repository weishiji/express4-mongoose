extends layout
block header

block content
  div.container
    form.form-horizontal#login-form(onsubmit='return false;')
      .form-group.has-feedback
        .col-sm-12.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
          input#login-user.form-control.border-line(type='text',name='email', placeholder='请输入邮箱')
          span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
      .form-group.has-feedback
        .col-sm-12.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
          input.form-control.border-line(type='password',name='password' placeholder='请输入密码')
          span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
      .form-group
        .col-sm-12.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
          button.btn.btn-block.btn-primary.btn-lg(type='submit') 登陆
    .text-center
      p.text-muted 还没有账号？
        a(href="/users/register") 立即注册

block footer
  footer.footer
    .container
      p.text-muted.text-center(style='margin:20px 0px;') 欢迎登陆
